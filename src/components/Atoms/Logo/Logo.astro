---
import { Image } from 'astro:assets';
import imageArt from './DBFM-Smythe.jpg';
import imageTech from './prof-corp.jpg';

import "./Logo.css";

interface Props {
  variant?: string;
  color?: string;
  height?: string;
}

const { variant = "default", color = "default", height="s3"} = Astro.props;
const classes = `logo logo--${variant} logo--color-${color}`;
---

<div class={classes} style=`--height: var(--${height});`>
  <div class="logo__logo">
    <Image
      src={imageArt}
      alt="Calvin"
      class:list={'art-only'}
    />
    <Image
      src={imageTech}
      alt="Calvin"
      class:list={'tech-only'}
    />
  </div>
</div>
