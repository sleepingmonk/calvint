---
import "./Cards.css"

interface Props {
  variant?: string;
  cardWidth?: string;
  className?: string;
}

const { variant, cardWidth = '60ch', className } = Astro.props;
const classes = `cards grid cards--${variant} ${className || ""}`;
const cardsAttributes = {
  class: classes,
  style: `--measure: ${cardWidth}; font-size: var(--s0);`,
};
---

<div {...cardsAttributes}>
  <slot />
</div>
